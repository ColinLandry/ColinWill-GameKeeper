<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:useDefaultMargins="true"
    tools:context="wc.productions.gamekeeper.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/userNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="@dimen/text_size" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:ems="10" />

    <TextView
        android:id="@+id/greetingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Greeting"
        android:textSize="@dimen/text_size" />

    <EditText
        android:id="@+id/customGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:ems="10"
        android:hint="Hello" />

    <TextView
        android:id="@+id/subjectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Subject"
        android:textSize="@dimen/text_size" />

    <EditText
        android:id="@+id/customSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:ems="10"
        android:hint="Update" />

    <TextView
        android:id="@+id/bodyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Email Body"
        android:textSize="@dimen/text_size" />

    <EditText
        android:id="@+id/customBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:ems="10"
        android:hint="Hello" />

    <Button
        android:id="@+id/confirmUserSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:backgroundTint="@color/colorPrimary"
        android:text="Confirm"
        android:textColor="@color/about_libraries_card"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/deleteAllButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"

        android:backgroundTint="@color/colorPrimary"
        android:text="Clear all Data"
        android:textColor="@color/about_libraries_card"
        android:textSize="@dimen/text_size" />

</GridLayout>
