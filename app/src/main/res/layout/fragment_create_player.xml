<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wc.productions.gamekeeper.CreatePlayerFragment">

    <TextView
        android:id="@+id/playerNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:text="Player Name"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/playerNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/playerPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Player Phone"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/playerPhoneInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/playerEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Player Email"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/playerEmailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/submitPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:text="Create team!" />

</GridLayout>
