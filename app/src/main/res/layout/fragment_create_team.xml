<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wc.productions.gamekeeper.CreateTeamFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/teamNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:text="Team Name"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/teamNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_column="1"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/teamCoachLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Coach Name"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/teamCoachInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_column="1"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submitTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:backgroundTint="@color/colorPrimary"
        android:text="Create team!" />


</GridLayout>
